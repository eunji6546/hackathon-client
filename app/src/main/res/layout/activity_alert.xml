<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E2D72">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/alert"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Alert System"
            android:textSize="20dp"
            android:textColor="#E16F14"
            android:layout_gravity="center" />

    </FrameLayout>


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Your Location"
        android:textSize="20dp"
        android:textColor="#E16F14"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text3"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic Detection"
        android:textSize="20dp"
        android:textColor="#E16F14"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text4"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="20dp"
        android:textColor="#E1EDB9"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You Want To Report?"
        android:textSize="20dp"
        android:textColor="#E16F14"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background = "#E16F14"
            android:padding = "10dp"
            android:onClick="mClick1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/internet"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1E2D72"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:text = "Report Now!"
                android:layout_gravity="center" />

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:onClick="mClickUpdate"
        android:id="@+id/text7"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#1E2D72"
        android:textStyle="bold"
        android:paddingLeft="25dp"
        android:layout_gravity="center" />

</LinearLayout>

